# Make sure we're in the docs directory
cd docs

# Remove existing node_modules and package-lock.json to start fresh
rm -rf node_modules package-lock.json

# Install dependencies
npm install @docusaurus/core @docusaurus/preset-classic
npm install @docusaurus/types @docusaurus/plugin-content-docs
npm install --save-dev typescript @types/node
npm install prism-react-renderer@^2.0.0
npm install --save-dev @tsconfig/docusaurus 

# Install all the missing type declarations
npm install --save-dev @types/node @docusaurus/types @docusaurus/preset-classic @docusaurus/core @docusaurus/plugin-content-docs @docusaurus/theme-classic 

cd docs/static/img
mkdir icons

# Create a 32x32 favicon
convert nayeemai.jpg -resize 32x32 -background transparent nayeemai-favicon.ico

# For better quality across different sizes (optional)
convert nayeemai.jpg -define icon:auto-resize=256,128,64,48,32,16 nayeemai-favicon.ico 

cd docs/docs
mkdir -p ai crypto productivity 

rm -rf docs/tutorial-basics docs/tutorial-extras 

cd docs
npm install @docusaurus/theme-search-algolia 
npm install @easyops-cn/docusaurus-search-local 

cd docs
npm remove @docusaurus/theme-search-algolia
npm install --save @easyops-cn/docusaurus-search-local 

cd docs
npm run build
npm run serve 

npm run start 

cd docs/docs/ai 